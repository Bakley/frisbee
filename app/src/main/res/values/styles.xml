<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="TabIndicator"/>

  <style name="ActionBarThemeOverlay" parent="">
    <item name="android:textColorPrimary">@color/theme_accent_1</item>
    <item name="android:textColorSecondary">@color/theme_accent_1</item>
    <item name="colorControlNormal">@color/theme_accent_1</item>
    <item name="colorControlHighlight">#3fff</item>
    <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.GDG.PopupMenu.Large
    </item>
    <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearance.GDG.PopupMenu.Small
    </item>
  </style>

  <style name="Widget.GDG.Spinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar"/>

  <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/theme_accent_1</item>
    <item name="android:textSize">18sp</item>
  </style>

  <style name="TextAppearance.GDG.PopupMenu.Small" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
    <item name="android:textColor">@color/asbestos</item>
  </style>

  <style name="TextAppearance.GDG.PopupMenu.Large" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
    <item name="android:textColor">@color/asbestos</item>
  </style>

  <style name="TextAppearance.GDG.FloatLabel" parent="TextAppearance.AppCompat.Small">
    <item name="android:textColor">?colorAccent</item>
  </style>

  <style name="Widget.GDG.TabLayout" parent="Widget.Design.TabLayout">
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="android:background">?colorPrimary</item>
    <item name="tabIndicatorColor">@color/white</item>
  </style>

  <style name="GoogleSignIn" parent="android:style/Widget.Button">
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingLeft">65dip</item>
    <item name="android:paddingRight">25dip</item>
    <item name="android:textSize">18sp</item>
  </style>

</resources>
